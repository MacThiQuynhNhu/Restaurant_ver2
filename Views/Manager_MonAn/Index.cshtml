</div>
<script>
    $(document).ready(function () {
        $("#addNewFoodBtn").click(function () {
            $("#addNewFood").modal('show');
        })
        $(".closeAddModal").click(function () {
            $("#addNewFood").modal('hide');
        })
        $(".showDetailModal").click(function () {
            $("#detailModal").modal("show");
            var foodId = $(this).data('id');
            $.ajax({
                url: "/Manager_MonAn/getDetail",
                type: "post",
                dataType: 'json',
                data: {
                    id: foodId
                },
                success: function (response) {
                    if (response) {
                        document.getElementById("foodNameInfo").value = (response).TenMonAn;
                        document.getElementById("foodPriceInfo").value = (response).Gia;
                        document.getElementById("foodUnitInfo").value = (response).DonViTinh;
                        document.getElementById("chefAddressInfo").value = (response).MoTa;
                        document.getElementById("foodDesInfo").value = (response).HinhAnh;
                        document.getElementById("foodDesInfo").value = (response).ThoiGIanRaMat;
                        $("#foodImgInfo").attr('src', (response).HinhAnh);
                        $('#foodNameInfo').attr('readonly', true);
                        $('#foodUnitInfo').attr('readonly', true);
                        $('#chefAddressInfo').attr('readonly', true);
                        $('#foodDesInfo').attr('readonly', true);
                        $('#foodPriceInfo').prop('disabled', true);
                    }
                },
                error: function (msg) {
                    alert('Có lỗi xảy ra ! Vui lòng thử lại');
                }
            });

        })
        $(".closeDetailModal").click(function () {
            $("#detailModal").modal("hide");
        })
        $("#btnAdd").click(function () {
            var temp = {
                TenMonAn: $("#foodName").val(),
                Gia: $('#foodPrice').val(),
                DonViTinh: $('#foodUnit').val(),
                MoTa: $('#foodDes').val(),
                HinhAnh: $("#foodImg").val(),
                ThoiGianRaMat: $('#foodPrice').find("option:selected").val(),
            }
            console.log(temp)
            $.ajax({
                url: "/Manager_MonAn/addFood",
                type: "post",
                dataType: 'json',
                data: {
                    TenMonAn: $("#foodName").val(),
                    Gia: $('#foodPrice').val(),
                    DonViTinh: $('#foodUnit').val(),
                    MoTa: $('#foodDes').val(),
                    HinhAnh: $("#foodImg").val(),
                    ThoiGianRaMat: $('#foodTime').find(":selected").val(),
                },
                success: function (status) {
                    if (status) {
                        swal({
                            title: "Lưu thành công!",
                            text: "",
                            icon: "success",
                            type: "success"
                        }).then(function () {
                            location.reload();
                        });
                    }
                },
                error: function (msg) {
                    console.log(msg)
                    swal("Có lỗi xảy ra!", "Vui lòng thử lại sau!", "error");

                }
            });

        })
        $(".showEditModal").click(function () {
            $("#editModal").modal("show");
            var foodId = $(this).data('id');
            $.ajax({
                url: "/Manager_MonAn/getDetail",
                type: "post",
                dataType: 'json',
                data: {
                    id: fooId
                },
                success: function (response) {
                    if (response) {
                        document.getElementById("foodNameEdit").value = (response.res).TenMonAn;
                        document.getElementById("foodPriceEdit").value = (response.res).Gia;
                        document.getElementById("foodUnitEdit").value = (response.res).DonViTinh;
                        document.getElementById("foodDesEdit").value = (response.res).MoTa;
                        document.getElementById("foodTimeEdit").value = (response.res).ThoiGianRaMat;
                        $("#foodImgEdit").attr('src', (response.res).HinhAnh);
                    }
                },
                error: function (msg) {
                    alert('Có lỗi xảy ra ! Vui lòng thử lại');
                }
            });
            $("#btnEdit").click(function () {
                swal({
                    title: "Bạn có chắc chắn muốn sửa thông tin đầu bếp này không?",
                    text: "Kiểm tra kỹ trước khi thực hiện!",
                    icon: "warning",
                    type: "warning"
                }).then(function () {
                    $.ajax({
                        url: "/Manager_MonAn/editFood",
                        type: "post",
                        dataType: 'json',
                        data: {
                            MaMonAn: foodId,
                            TenMonAn: $("#foodNameEdit").val(),
                            Gia: $('#foodPriceEdit').val(),
                            DonViTinh: $('#foodUnitEdit').val(),
                            MoTa: $('#foodDesEdit').val(),
                            HinhAnh: $("#foodImgEdit_").val(),
                            ThoiGianRaMat: $('#foodTimeEdit').find(":selected").val(),
                        },
                        success: function (status) {
                            if (status) {
                                swal({
                                    title: "Lưu thành công!",
                                    text: "",
                                    icon: "success",
                                    type: "success"
                                }).then(function () {
                                    location.reload();
                                });
                            }
                        },
                        error: function (msg) {
                            console.log(msg)
                            swal("Có lỗi xảy ra!", "Vui lòng thử lại sau!", "error");
                        }
                    });

                });
            })

        })
        $(".closeEditModal").click(function () {
            $("#editModal").modal("hide");
        })

        $(".btnDelete").click(function () {
            var foodId = $(this).data('id');
            swal({
                title: "Bạn có chắc chắn muốn xóa đầu bếp này không?",
                text: "Kiểm tra kỹ trước khi thực hiện!",
                icon: "warning",
                type: "warning"
            }).then(function () {
                $.ajax({
                    url: "/Manager_MonAn/deleteFood",
                    type: "post",
                    dataType: 'json',
                    data: {
                        MaMonAn: foodId
                    },
                    success: function (status) {
                        if (status) {
                            swal({
                                title: "Xóa thành công!",
                                text: "",
                                icon: "success",
                                type: "success"
                            }).then(function () {
                                location.reload();
                            });
                        }
                    },
                    error: function (msg) {
                        console.log(msg)
                        swal("Có lỗi xảy ra!", "Vui lòng thử lại sau!", "error");
                    }
                });

            });
        })

    })
</script>
