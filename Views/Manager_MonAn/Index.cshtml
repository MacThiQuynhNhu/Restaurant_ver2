@model IEnumerable<Restaurant.Models.MonAn>

@{
    ViewBag.Title = "Quản lý đầu bếp";
    Layout = "~/Views/Manager_Layout.cshtml";
    var counter = 1;

}

<style>
    .over_auto {
        width: 100%;
    }

    .modal-backdrop {
        background-color: #ccc !important;
        opacity: 0.6 !important;
    }

    .modal-dialog {
        top: 30% !important;
        max-width: 50%;
    }

    .modal-header {
        background-color: #00BCD4 !important;
    }

    .modal-title {
        color: #fff !important;
    }

    .close {
        position: absolute;
        right: 0;
        top: -3px;
        color: red;
    }
</style>

<main id="main" class="main">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="widget">

                <div class="widget-header bordered-bottom bordered-yellow mb-3" style="display: flex">
                    <div class="widget-caption has-sub-caption row col-lg-9 col-md-6">
                        <span class="widget-caption-left" style="width:40px"><i class="menu-icon fa fa-tasks"></i></span>
                        <div class="widget-caption-right">
                            <span class="widget-mainCaption">
                                Danh sách món ăn
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6" style="padding-right: 0px;">
                        <button id="addNewFoodBtn" class="btn btn-primary" style="float:right;margin: 15px 15px 0 0;padding: 5px 15px 5px 10px"><i class="fa fa-plus"></i>Thêm mới</button>
                    </div>

                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12" style="padding:0">
                        <div class="widget-body no-padding widget_form_table" id="data">
                            <div class="dataTables_wrapper form-inline" style="padding:5px;">
                                <table id="tblForm" style="width:100%" class="table table-bordered table-hover table-striped dataTable" role="grid" aria-describedby="searchable_info">
                                    <thead>
                                        <tr role="row">
                                            <th tabindex="0" style="width:5%">STT</th>
                                            <th tabindex="0" aria-controls="searchable">Tên món ăn</th>
                                            <th aria-controls="searchable">Giá</th>
                                            <th tabindex="0">Đơn vị tính</th>
                                            <th tabindex="0">Mô tả</th>
                                            @*<th tabindex="0">Hình ảnh</th>*@
                                            <th tabindex="0">Thời gian ra mắt</th>
                                            <th tabindex="0" style="width:15%">Tác vụ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr style="cursor:pointer" data-id="@item.MaMonAn">
                                                <td style="text-align:center">@counter</td>
                                                <td style="text-align:center">@item.TenMonAn</td>
                                                <td style="text-align:center">@item.Gia</td>
                                                <td class="text-center">@item.DonViTinh</td>
                                                <td style="text-align:center">@item.MoTa</td>
                                            @*<td style="text-align:center"><img src="~/Content/Admin/assets/img/@item.HinhAnh" width="30px" alt="img" /></td>*@
                                                <td style="text-align:center">@item.ThoiGianRaMat</td>

                                                <td>
                                                    <button data-id="@item.MaMonAn" class="showDetailModal btn btn-primary view_file" role="button" title="Xem chi tiết">
                                                        <i class="fa fa-eye"></i>
                                                    </button>
                                                    <button data-id="@item.MaMonAn" class="btn btn-primary showEditModal" role="button" title="Chỉnh sửa thông tin">
                                                        <i class="fa fa-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-danger btnDelete" role="button" title="Xóa" data-toggle="modal" data-target="#delete" data-id='@item.MaMonAn'>
                                                        <i class="fa fa-trash-o"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

