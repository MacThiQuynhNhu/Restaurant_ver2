
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Manager_Layout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>MTA Restaurant</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Trang-Chu">Món đậu phụ rán</a></li>
                <li class="breadcrumb-item">40000 vnđ</li>
                <li class="breadcrumb-item active">đĩa</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section section-edit_food">
        <div class="row">
            <div class="col-lg-7">

                <div class="card">
                    <div class="card-body">
                        <form action=" ~/Manager_BaiViet/Create" method="post" enctype="multipart/form-data">
                            <h5 class="card-title">Thêm/Sửa BaiViet</h5>

                            <div class="row mb-3">

                                <label for="inputEmail" class="col-sm-2 col-form-label">Mã bài viết</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="code" placeholder="Bai Viet" name="MaBaiViet">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" placeholder="Tieu de" name="TieuDe">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Hình ảnh</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="UrlAnh" type="file" id="formFile">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Nội dung</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="cost" placeholder="NoiDung" name="NoiDung">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Xác nhận</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </section>
    </main>

