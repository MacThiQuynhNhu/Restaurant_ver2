
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Manager_Layout.cshtml";
}

<main id="main" class="main">

    <section class="section section-edit_food">
        <div class="row" style="justify-content: center">
            <div class="col-lg-9">

                <div class="card">
                    <div class="card-body">
                        <form action=" ~/Manager_BaiViet/Create" method="post" enctype="multipart/form-data">
                            <div class="row mb-3" style="justify-content: center">
                                <h3>THÊM BÀI VIẾT</h3>
                            </div>
                            <div class="row mb-3">

                                <label for="inputEmail" class="col-sm-2 col-form-label">Mã bài viết</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="code" placeholder="" name="MaBaiViet">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" placeholder="" name="TieuDe">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Hình ảnh</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="UrlAnh" type="file" id="formFile">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Nội dung</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="cost" placeholder="" name="NoiDung">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Xác nhận</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </section>
    </main>

