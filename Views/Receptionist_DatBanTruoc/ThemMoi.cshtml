@model Restaurant.Models.BanDatTruoc

@{
    var list_khachhang = ViewBag.List_KhachHang;
    var list_ban = ViewBag.List_Ban;
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Receptionist_Layout.cshtml";
}

<h2>ThemMoi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mt-5" style="">
        <h4>Thêm mới bàn đặt trước</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã Khách Hàng </label>
            <div class="col-md-10">
                <select name="MaKhachHang">
                    @foreach (var item in list_khachhang)
                    {
                        <option value=@item.MaKhachHang>@item.MaKhachHang</option>
                    }
                </select>
                <div class="select-dropdown"></div>
            </div>
        </div>

        
        <div class="form-group">
            <label class="control-label col-md-2">Ngày </label>
            <div class="col-md-10">
                <input class="form-control" name="Ngay" value="@Html.Raw(DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss").Replace(' ','T'))" type="datetime-local" />
                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giờ </label>
            <div class="col-md-10">
                <input class="form-control" name="Gio" value="@Html.Raw(DateTime.Now.ToString("HH:mm:ss").Replace(' ','T'))" type="time" />
                @Html.ValidationMessageFor(model => model.Gio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số Lượng </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ghi Chú </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã Nhân Viên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top:12px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" style=""/>
            </div>
        </div>
    </div>
}